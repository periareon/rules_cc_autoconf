"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/minmax.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "minmax",
    checks = [
        # Equivalent to gl_MINMAX macro from minmax.m4
        # On macOS, MIN/MAX are in sys/param.h
        checks.AC_TRY_COMPILE(
            code = """#include <sys/param.h>
int x = MIN (42, 17);
int y = MAX (42, 17);""",
            define = "HAVE_MINMAX_IN_SYS_PARAM_H",
            language = "c",
        ),
    ],
    visibility = ["//visibility:public"],
    deps = [
        # For test compatibility
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
    ],
)
