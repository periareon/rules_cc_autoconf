"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/isnanf.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "isnanf",
    checks = [
        # gl_FUNC_ISNANF checks for isnanf function
        checks.AC_CHECK_FUNC(
            "isnanf",
            name = "_gl_cv_func_isnanf",
        ),
        # HAVE_ISNANF_IN_LIBC: isnanf() is available in libc without -lm
        checks.AC_DEFINE("HAVE_ISNANF_IN_LIBC", "1"),
        # AC_SUBST([ISNANF_LIBM]) - library needed for isnanf
        # On macOS/Linux, if isnanf exists, it's in libc, so ISNANF_LIBM is empty
        checks.AC_SUBST("ISNANF_LIBM", ""),
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
        "//gnulib/m4/exponentf",
        "//gnulib/m4/math_h",
    ],
)
