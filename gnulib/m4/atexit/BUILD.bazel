"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/atexit.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:macros.bzl", "macros")

autoconf(
    name = "atexit",
    checks = [
        # Check for atexit function
        # Equivalent to gl_FUNC_ATEXIT macro from atexit.m4
        macros.AC_CHECK_FUNC(
            "atexit",
            define = "HAVE_ATEXIT",
        ),
    ],
    visibility = ["//visibility:public"],
)
