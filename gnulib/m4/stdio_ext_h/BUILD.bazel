"""Common module for stdio_ext.h header check"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:macros.bzl", "macros")

# Provides HAVE_STDIO_EXT_H for modules that need stdio_ext.h

autoconf(
    name = "stdio_ext_h",
    checks = [
        macros.AC_CHECK_HEADER("stdio_ext.h"),
    ],
    visibility = ["//visibility:public"],
)
