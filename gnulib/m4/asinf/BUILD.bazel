"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/asinf.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "asinf",
    checks = [
        checks.AC_CHECK_FUNC(
            "asinf",
            define = "HAVE_ASINF",
            subst = True,
        ),
        checks.AC_CHECK_DECL(
            "asinf",
            define = "HAVE_DECL_ASINF",
        ),
        # Set ASINF_LIBM to empty string (subst-only)
        # gl_COMMON_FLOAT_MATHFUNC sets this based on whether the function needs libm
        # On macOS, asinf is in libc, so ASINF_LIBM=""
        checks.AC_SUBST("ASINF_LIBM", ""),
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//gnulib/m4/extensions",
        "//gnulib/m4/math_h",  # AC_REQUIRE([gl_MATH_H_DEFAULTS])
        "//gnulib/m4/asin",  # AC_REQUIRE([gl_FUNC_ASIN])
        # Note: AC_CHECK_INCLUDES_DEFAULT is added for test compatibility
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
    ],
)
