"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/cnd.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "cnd",
    checks = select({
        # On Linux with glibc 2.28+: C11 threads are available
        "@platforms//os:linux": [
            checks.AC_DEFINE("HAVE_CND_INIT", "1"),
        ],
        # On other platforms: Use AC_TRY_COMPILE to check
        "//conditions:default": [
            checks.AC_TRY_COMPILE(
                code = """#include <threads.h>

#ifdef __cplusplus
extern "C"
#endif
char cnd_init ();

int main(void) {
    return cnd_init();
}""",
                define = "HAVE_CND_INIT",
                language = "c",
            ),
        ],
    }),
    visibility = ["//visibility:public"],
    deps = [
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
        "//gnulib/m4/include_next",  # Required for INCLUDE_NEXT variables
        "//gnulib/m4/threads_h",
    ],
)
