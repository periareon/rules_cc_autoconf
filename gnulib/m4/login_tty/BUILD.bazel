"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/login_tty.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "login_tty",
    checks = [
        # gl_LOGIN_TTY checks for login_tty function
        # On macOS, login_tty is available
        checks.AC_CHECK_FUNC(
            "login_tty",
            define = "HAVE_LOGIN_TTY",
        ),
    ],
    visibility = ["//visibility:public"],
    deps = [
        # Use HAVE_UTMP_H target without the AC_SUBST to avoid substituting HAVE_UTMP_H
        "//gnulib/m4/utmp_h:HAVE_UTMP_H",
        "//gnulib/m4/termios_h",
        "//gnulib/m4/pty_h",
        "//gnulib/m4/pty:gl_PTY_LIB",
        # For test compatibility - need basic header defines
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
    ],
)
