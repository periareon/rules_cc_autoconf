"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/posix_spawn_faction_addchdir.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "posix_spawn_faction_addchdir",
    checks = [
        # Check for the _np (non-portable) variant (macOS)
        checks.AC_CHECK_FUNC(
            "posix_spawn_file_actions_addchdir_np",
            define = "HAVE_POSIX_SPAWN_FILE_ACTIONS_ADDCHDIR_NP",
        ),
        # Check for the standard function name (added in newer POSIX / Xcode 26+).
        # AC_CHECK_FUNCS_ONCE([posix_spawn_file_actions_addchdir])
        checks.AC_CHECK_FUNC(
            "posix_spawn_file_actions_addchdir",
        ),
        # Per upstream m4:
        #   if test $ac_cv_func_posix_spawn_file_actions_addchdir = yes; then
        #     REPLACE_POSIX_SPAWN_FILE_ACTIONS_ADDCHDIR=1
        #   else
        #     HAVE_POSIX_SPAWN_FILE_ACTIONS_ADDCHDIR=0
        #   fi
        checks.AC_SUBST(
            "HAVE_POSIX_SPAWN_FILE_ACTIONS_ADDCHDIR",
            condition = "ac_cv_func_posix_spawn_file_actions_addchdir",
            if_false = "0",
            if_true = "1",
        ),
        checks.AC_SUBST(
            "REPLACE_POSIX_SPAWN_FILE_ACTIONS_ADDCHDIR",
            condition = "ac_cv_func_posix_spawn_file_actions_addchdir",
            if_false = "0",
            if_true = "1",
        ),
    ],
    visibility = ["//visibility:public"],
    deps = [
        # Note: gl_SPAWN_H_DEFAULTS is a _DEFAULTS function, so we ignore it per user's instruction
        # Use gl_POSIX_SPAWN_MINIMAL instead of posix_spawn to avoid HAVE_POSIX_SPAWNATTR_T
        "//gnulib/m4/posix_spawn:gl_POSIX_SPAWN_MINIMAL",
        # For test compatibility - need basic header defines
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
    ],
)
