        checks.AC_SUBST("GNULIB_TIME_R", 0),
        checks.AC_SUBST("GNULIB_TIME_RZ", 0),
        checks.AC_SUBST("GNULIB_TZNAME", 0),
        checks.AC_SUBST("GNULIB_TZSET", 0),
        # Microsoft deprecated alias function names
        checks.AC_SUBST("GNULIB_MDA_TZSET", 1),
    ],
    visibility = ["//visibility:private"],
    deps = [
        ":gl_TIME_H_DEFAULTS",
    ],
