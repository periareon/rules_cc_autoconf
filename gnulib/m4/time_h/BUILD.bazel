autoconf(
    name = "gl_TIME_H_REQUIRE_DEFAULTS",
    checks = [
        checks.AC_SUBST("GNULIB_ASCTIME", 0),
        checks.AC_SUBST("GNULIB_ASCTIME_R", 0),
        checks.AC_SUBST("GNULIB_CTIME", 0),
        checks.AC_SUBST("GNULIB_CTIME_R", 0),
        checks.AC_SUBST("GNULIB_GMTIME", 0),
        checks.AC_SUBST("GNULIB_GMTIME_R", 0),
        checks.AC_SUBST("GNULIB_LOCALTIME", 0),
        checks.AC_SUBST("GNULIB_LOCALTIME_R", 0),
        checks.AC_SUBST("GNULIB_MKTIME", 0),
        checks.AC_SUBST("GNULIB_NANOSLEEP", 0),
        checks.AC_SUBST("GNULIB_STRFTIME", 0),
        checks.AC_SUBST("GNULIB_STRPTIME", 0),
        checks.AC_SUBST("GNULIB_TIME", 0),
        checks.AC_SUBST("GNULIB_TIMEGM", 0),
