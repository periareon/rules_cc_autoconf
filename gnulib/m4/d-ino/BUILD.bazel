load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "d-ino",
    checks = [
        # Equivalent to gl_CHECK_TYPE_STRUCT_DIRENT_D_INO macro from d-ino.m4
        # Note: Full implementation includes runtime checks that verify d_ino
        # actually works, which are not easily replicable in Bazel
        checks.AC_TRY_COMPILE(
            code = """#include <sys/types.h>
#include <dirent.h>

int main(void) {
    struct dirent dp;
    (void) dp.d_ino;
    return 0;
}""",
            define = "D_INO_IN_DIRENT",
            language = "c",
        ),
    ],
    visibility = ["//visibility:public"],
)
