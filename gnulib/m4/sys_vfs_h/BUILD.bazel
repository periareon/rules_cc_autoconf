"""Common module for sys/vfs.h header check"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:macros.bzl", "macros")

# Provides HAVE_SYS_VFS_H for modules that need sys/vfs.h

autoconf(
    name = "sys_vfs_h",
    checks = [
        macros.AC_CHECK_HEADER("sys/vfs.h"),
    ],
    visibility = ["//visibility:public"],
)
