                if_true = 1,
                subst = True,
            ),
            checks.AC_DEFINE(
                "HAVE_DECL_OPENPTY",
                condition = "ac_cv_have_decl_openpty",
                if_false = 0,
                if_true = 1,
            ),
            # On Linux, openpty has correct signature: no replacement needed
            checks.AC_SUBST("REPLACE_OPENPTY", 0),
        ],
        # On macOS: openpty is in <util.h>, exists but not const-safe
        "//conditions:default": [
            checks.AC_CHECK_DECL(
                "openpty",
                name = "ac_cv_have_decl_openpty",
                includes = [
                    "#include <sys/types.h>",
                    "#include <termios.h>",
                    "#include <util.h>",
                ],
            ),
            checks.AC_DEFINE(
                "HAVE_OPENPTY",
                condition = "ac_cv_have_decl_openpty",
                if_false = 0,
                if_true = 1,
                subst = True,
            ),
            checks.AC_DEFINE(
                "HAVE_DECL_OPENPTY",
                condition = "ac_cv_have_decl_openpty",
                if_false = 0,
                if_true = 1,
            ),
            # On macOS, openpty is not const-safe: needs replacement
            checks.AC_SUBST("REPLACE_OPENPTY", 1),
        ],
    }),
    visibility = ["//visibility:public"],
    deps = [
        ":gl_PTY_LIB",
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
        "//gnulib/m4/extensions",
        "//gnulib/m4/pty_h",
    ],
