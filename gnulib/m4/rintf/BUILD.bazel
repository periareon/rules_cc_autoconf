"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/rintf.m4"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "rintf",
    checks = [
        # This checks if rintf exists without libm or with libm
        # Use internal define to avoid defining HAVE_RINTF in config.h
        checks.AC_CHECK_FUNC(
            "rintf",
            name = "_gl_cv_func_rintf",
        ),

        # if test $gl_cv_func_rintf_no_libm = yes || test $gl_cv_func_rintf_in_libm = yes; then
        #   HAVE_RINTF=1
        # else
        #   HAVE_RINTF=0
        #   RINTF_LIBM=
        # Set HAVE_RINTF substitution variable to "1" if function exists, "0" otherwise
        checks.AC_SUBST(
            "HAVE_RINTF",
            condition = "_gl_cv_func_rintf",
            if_false = 0,
            if_true = 1,
        ),

        # RINTF_LIBM is set by gl_MATHFUNC
        # If function exists without libm, RINTF_LIBM=""
        # If function exists with libm, RINTF_LIBM="-lm"
        # If function doesn't exist, RINTF_LIBM=""
        # Based on golden files, macOS: RINTF_LIBM="" (function in libc), Linux: RINTF_LIBM="-lm" (function in libm)
    ] + select({
        # Linux needs -lm for rintf (only if function exists)
        "@platforms//os:linux": [
            checks.AC_SUBST(
                "RINTF_LIBM",
                condition = "_gl_cv_func_rintf",
                if_false = "",
                if_true = "-lm",
            ),
        ],
        "//conditions:default": [
            # macOS has rintf in libc, so RINTF_LIBM=""
            checks.AC_SUBST(
                "RINTF_LIBM",
                condition = "_gl_cv_func_rintf",
                if_false = "",
                if_true = "",
            ),
        ],
    }),
    visibility = ["//visibility:public"],
    deps = [
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
        "//gnulib/m4/extensions",  # AC_REQUIRE([gl_USE_SYSTEM_EXTENSIONS])
        "//gnulib/m4/math_h",  # AC_REQUIRE([gl_MATH_H_DEFAULTS])
    ],
)
