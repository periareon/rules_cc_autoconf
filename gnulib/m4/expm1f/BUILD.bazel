"""https://github.com/coreutils/gnulib/blob/635dbdcf501d52d2e42daf6b44261af9ce2dfe38/m4/expm1f.m4

gl_FUNC_EXPM1F:
- AC_REQUIRE([gl_MATH_H_DEFAULTS])
- AC_REQUIRE([gl_FUNC_EXPM1])
- AC_REQUIRE([gl_USE_SYSTEM_EXTENSIONS])
- AC_CHECK_FUNCS([expm1f])
- AC_SUBST([EXPM1F_LIBM])
"""

load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:checks.bzl", "checks")

autoconf(
    name = "expm1f",
    checks = [
        checks.AC_CHECK_FUNC(
            "expm1f",
            define = "HAVE_EXPM1F",
        ),
        # EXPM1F_LIBM is set to EXPM1_LIBM (empty on macOS)
        checks.AC_SUBST("EXPM1F_LIBM", ""),
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//autoconf/macros/AC_CHECK_INCLUDES_DEFAULT",
        "//gnulib/m4/expm1",  # AC_REQUIRE([gl_FUNC_EXPM1])
        "//gnulib/m4/extensions",  # AC_REQUIRE([gl_USE_SYSTEM_EXTENSIONS])
        "//gnulib/m4/math_h",  # AC_REQUIRE([gl_MATH_H_DEFAULTS])
    ],
)
