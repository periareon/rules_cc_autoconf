load("@rules_cc//cc:cc_test.bzl", "cc_test")
load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:autoconf_hdr.bzl", "autoconf_hdr")
load("//autoconf:macros.bzl", "macros")
load("//autoconf:package_info.bzl", "package_info")
load("//autoconf/private/tests:diff_test.bzl", "diff_test")
load("//autoconf/private/tests:gnu_autoconf_diff_test.bzl", "gnu_autoconf_diff_test")

package_info(
    name = "package",
    package_name = "test_undefs",
    package_version = "1.0.0",
)

autoconf(
    name = "autoconf",
    checks = [
        # These should pass (headers exist)
        macros.AC_CHECK_HEADER("stdio.h"),
        macros.AC_CHECK_HEADER("stdlib.h"),
        # These should fail (headers don't exist)
        macros.AC_CHECK_HEADER("nonexistent_header_abc.h"),
        macros.AC_CHECK_HEADER("nonexistent_header_def.h"),
    ],
    deps = [":package"],
)

autoconf_hdr(
    name = "config",
    out = "config.h",
    template = "config.h.in",
    deps = [":autoconf"],
)

diff_test(
    name = "diff_test",
    file1 = "golden_config.h.in",
    file2 = ":config.h",
)

cc_test(
    name = "test_undefs",
    srcs = [
        "test_undefs.c",
        ":config.h",
    ],
)

gnu_autoconf_diff_test(
    name = "gnu_autoconf_diff_test",
    configure_ac = "configure.ac",
    golden_file = "golden_config.h.in",
    template = "config.h.in",
)
