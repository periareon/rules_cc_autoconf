load("@rules_cc//cc:cc_test.bzl", "cc_test")
load("//autoconf:autoconf.bzl", "autoconf")
load("//autoconf:autoconf_hdr.bzl", "autoconf_hdr")
load("//autoconf:checks.bzl", "checks")
load("//autoconf:package_info.bzl", "package_info")
load("//autoconf/tests:diff_test.bzl", "diff_test")

package_info(
    name = "package",
    package_name = "test_hdr",
    package_version = "1.0.0",
)

# autoconf_hdr works with an autoconf target
autoconf(
    name = "autoconf",
    checks = [
        # Custom defines (cross-platform friendly)
        checks.AC_DEFINE("CUSTOM_VALUE", 42),  # Integer, not string - renders as unquoted 42
        checks.AC_DEFINE("ENABLE_FEATURE", 1),  # Integer, not string - renders as unquoted 1
        # Standard headers (cross-platform friendly - stdio.h and stdlib.h exist everywhere)
        checks.AC_CHECK_HEADER(
            "stdio.h",
            define = "HAVE_STDIO_H",
        ),
        checks.AC_CHECK_HEADER(
            "stdlib.h",
            define = "HAVE_STDLIB_H",
        ),
        # Standard functions (cross-platform friendly)
        checks.AC_CHECK_FUNC(
            "malloc",
            define = "HAVE_MALLOC",
        ),
        checks.AC_CHECK_FUNC(
            "printf",
            define = "HAVE_PRINTF",
        ),
    ],
    deps = [":package"],
)

autoconf_hdr(
    name = "config",
    out = "config.h",
    template = "config.h.in",
    deps = [":autoconf"],
)

diff_test(
    name = "diff_test",
    file1 = "golden_config.h.in",
    file2 = ":config.h",
)

cc_test(
    name = "test_hdr",
    srcs = [
        "test_hdr.c",
        ":config.h",
    ],
)
